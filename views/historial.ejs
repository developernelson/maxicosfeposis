<%- include('partials/head', {title: "FA & FA Posis 2.0 Victoria"}) %>

<body>
    <div class="container">
        <!-- menu de navegacion -->
        <%- include('partials/navbar') %>

        <!-- animacion de uploading -->
        <%- include('partials/uploading') %>
        
             <!-- animacion de update data -->
             <%- include('partials/update') %>

        <div class="container__info stock animate__animated animate__fadeIn animate__faster">
            <div class = "title">
                <h1>Historial</h1>
            <hr/>
            </div>
            <div class="div-table div-table_header">
                <table >
                    <thead>
                        <tr >
                          <th>Secuencia</th>
                          <th>Fecha</th>
                          <th>Clientes</th>
                          <th>Total de atados</th>
                          <th>$ Movimientos</th>
                          <th>Total de movimientos</th>
                          <th>Informado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for( let i = 0; i < historial?.length; i++ ) { %>
                        <tr>
                            <td><%= historial[i].num_secuencia %> </td>
                            <td><%= historial[i].fecha %></td>
                            <td><%= historial[i].cant_clientes %></td>
                            <td><%= historial[i].cant_paquetes %></td>
                            <td><%= '$ '+historial[i].monto_venta %></td>
                            <td><%= historial[i].cant_facturas %></td>
                            <td class=<%= (historial[i].informado === 'NO') && 'no-informado'  %> ><%= historial[i].informado %></td>
                        </tr>
                        <% } %>
                    </tbody>
                  </table>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="/script/script.js"></script>

</body>
</html>
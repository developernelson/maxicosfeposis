                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <%= sales[0]?.sequenceNumber%>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <thead>
                                        <tr>
                                            <th>documentDate</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <%=  sales[0]?.documentDate%>
